<ChiliPairsGame>:
    orientation: 'vertical'
    chiligrid: _chiligrid

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1
        spacing: 10
        Label:
            font_size: 20
            #text: 'Set Actual Nombre... si'
            text: 'Now learning: ' + str(root.set_loaded)

        Label:
            font_size: 20
            text: 'Time: ' + root.elapsed_time_str

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.9
        spacing: 10

        ChiliGrid:
            id: _chiligrid
            chiligame: root

        BoxLayout
            orientation: 'vertical'
            size_hint: 0.1, 1
            spacing: 20

            Button:
                size: 20, 50
                text: ' Mostrar \n Cartas (' + str(root.show_remain) + ')'

            Button:
                size: 20, 50
                text: ' Adivinar \n Objeto'
<ChiliGrid>:
    spacing: 10
    # size: 800, 600
    size_hint: 0.9, 1 
    gridsize: 4, 6

<ChiliCard>:
    size: 100, 100
    back_widget: _back.__self__
    canvas:
        Color:
            rgba: self.bgcolor
        Rectangle:
            size: self.size
            pos: self.pos

    Button:
        id: _back
        pos: root.pos
        size: root.size
        on_press: root.flip()

        canvas:
            
            Color:
                rgba: root.back_color
            Rectangle:
                pos: self.pos
                size: self.size
                source: root.back_img
