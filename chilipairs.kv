<ChiliPairsGame>:
    orientation: 'vertical'
    chiligrid: _chiligrid

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1
        spacing: 10
        Label:
            font_size: 20
            #text: 'Set Actual Nombre... si'
            text: 'Now learning: ' + str(root.set_loaded)

        Label:
            font_size: 20
            text: 'Time 01:30'

    ChiliGrid:
        id: _chiligrid
        chiligame: root

<ChiliGrid>:
    spacing: 5
    # size: 800, 600
    size_hint: 1, 0.9 
    gridsize: 4, 6

<ChiliCard>:
    size: 100, 100
    back_widget: _back
    canvas:
        Color:
            rgba: self.bgcolor
        Rectangle:
            size: self.size
            pos: self.pos

    Button:
        id: _back
        pos: root.pos
        size: root.size
        on_press: root.flip()

        canvas:
            
            Color:
                rgba: root.back_color
            Rectangle:
                pos: self.pos
                size: self.size
                source: root.back_img
